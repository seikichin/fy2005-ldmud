#include <ansi.h>
#include <weapon.h>
inherit HAMMER;
void create()
{
        set_name( COR "订作的" NOR, ({ "order" }) );
        set_weight(3000);
        if( clonep() )
                set_default_object(__FILE__);
        else {
                set("unit", "把");
                set("long", "这是一把铁锤，沉甸甸的。\n");
                set("no_drop",1);
                set("no_get",1);
                set("owner","fengyun");
                set("timestamp","STAMP");
                set("rigidity",500);
                set("material", "iron");
                set("wield_msg", "$N拿出一把$n，试了试重量，然後握在手中。\n");
                set("unwield_msg", "$N放下手中的$n。\n");
        }
        ::init_hammer(30);
}
int save()
{
        string file;
	string equipped;
        if( stringp(file = this_object()->query_save_file()) ){
		equipped = ({string})query("equipped");
		delete("equipped");	
                assure_file(file);
                if(save_object(file)==0){
		set("equipped",equipped);
		return 1;
                 }
        }
        return 0;
}
int restore()
{
        string file;

        if( stringp(file = this_object()->query_save_file()) )
        if(restore_object(file))
	{
		set_weight(query("weight"));
		return 1;
	}
        return 0;
}